<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".activities.AssetListScreenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/toolbar"
            app:title="@string/asset_list_title"
            >
        </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen10dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_perm_identity_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen14sp"
                            android:paddingLeft="@dimen/dimen10dp"
                            android:paddingRight="@dimen/dimen10dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="@string/adt_id"/>

                        <TextView
                            android:id="@+id/tvAuditId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen15sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen10dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_add_location_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen14sp"
                            android:paddingLeft="@dimen/dimen10dp"
                            android:paddingRight="@dimen/dimen10dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="@string/location"/>

                        <TextView
                            android:id="@+id/tvloc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen15sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/qr"
                            android:layout_width="@dimen/dimen40dp"
                            android:layout_height="@dimen/dimen40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dimen10dp"
                            android:src="@drawable/qrcode"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen5dp"
                            app:cardCornerRadius="@dimen/dimen10dp"
                            app:cardElevation="@dimen/dimen10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen14sp"
                                    android:paddingLeft="@dimen/dimen10dp"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/dimen5dp"
                                    android:paddingBottom="@dimen/dimen5dp"
                                    android:textColor="@android:color/black"
                                    android:text="@string/total"/>

                                <TextView
                                    android:id="@+id/total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen15sp"
                                   android:padding="@dimen/dimen5dp"
                                    android:text="0"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/dimen10dp"
                            android:layout_margin="@dimen/dimen5dp"
                            app:cardElevation="@dimen/dimen10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen14sp"
                                    android:paddingLeft="@dimen/dimen10dp"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/dimen5dp"
                                    android:paddingBottom="@dimen/dimen5dp"
                                    android:textColor="@android:color/black"
                                    android:text="@string/completed"/>

                                <TextView
                                    android:id="@+id/completed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen15sp"
                                    android:padding="@dimen/dimen5dp"
                                    android:text="0"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen5dp"
                            app:cardCornerRadius="@dimen/dimen10dp"
                            app:cardElevation="@dimen/dimen10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen14sp"
                                    android:paddingLeft="@dimen/dimen10dp"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/dimen5dp"
                                    android:paddingBottom="@dimen/dimen5dp"
                                    android:textColor="@android:color/black"
                                    android:text="@string/pending"/>

                                <TextView
                                    android:id="@+id/pending"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen15sp"
                                    android:padding="@dimen/dimen5dp"
                                    android:text="0"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAssetList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="ifContentScrolls"
                            android:visibility="gone"
                            android:layout_weight="1">

                        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/tab_layout"
            android:background="@color/colorPrimary"
            app:tabInlineLabel="true"
            app:tabTextColor="@color/white"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"/>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_pager"/>

                        <LinearLayout
                            android:id="@+id/llAuditDone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:weightSum="1"
                            android:visibility="visible"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen10dp"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.45"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnBack"
                                    android:layout_width="@dimen/dimen200dp"
                                    android:layout_height="@dimen/dimen50dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/rounded_button"
                                    android:text="@string/back_btn_txt"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="@dimen/dimen0dp"
                                android:layout_weight="0.022"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:layout_width="@dimen/dimen0dp"
                                android:layout_weight="0.45"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnAuditDone"
                                    android:layout_width="@dimen/dimen200dp"
                                    android:layout_height="@dimen/dimen50dp"
                                    android:textAllCaps="false"
                                    android:layout_centerInParent="true"
                                    android:text="@string/audit_done_btn_text"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/rounded_button"/>
                                <ProgressBar
                                    android:id="@+id/pbAuditDoneLoading"
                                    android:layout_width="@dimen/dimen24dp"
                                    android:layout_height="@dimen/dimen24dp"
                                    android:layout_centerInParent="true"
                                    android:elevation="@dimen/dimen10dp"
                                    android:indeterminate="true"
                                    android:indeterminateTint="@android:color/white"
                                    android:indeterminateTintMode="src_atop"
                                    android:visibility="gone"/>
                            </RelativeLayout>


                        </LinearLayout>
        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/load"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:animateLayoutChanges="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ProgressBar
                            android:id="@+id/pbLoading"
                            android:layout_width="@dimen/dimen30dp"
                            android:layout_height="@dimen/dimen30dp"
                            android:layout_centerInParent="true"
                            android:elevation="@dimen/dimen10dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@android:color/black"
                            android:indeterminateTintMode="src_atop" />

                        <TextView
                            android:id="@+id/tvPleaseWait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/dimen15dp"
                            android:text="@string/getting_asset_list"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/dimen18sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llinternet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dimennegative40dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/dimen200dp"
                            android:layout_height="@dimen/dimen200dp"
                            android:paddingLeft="@dimen/dimen10dp"
                            android:paddingRight="@dimen/dimen10dp"
                            android:layout_marginBottom="@dimen/dimen10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wireless" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_internet_connection"
                            android:textSize="@dimen/dimen25sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dimen20dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnRetry"
                                android:layout_width="@dimen/dimen200dp"
                                android:layout_height="@dimen/dimen50dp"
                                android:layout_marginTop="@dimen/dimen20dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_button"
                                android:text="@string/retry_btn_text"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:visibility="visible" />

                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/servererror"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/dimennegative40dp"
                            android:gravity="center"
                            android:background="@color/white"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen200dp"
                                android:paddingLeft="@dimen/dimen10dp"
                                android:paddingRight="@dimen/dimen10dp"
                                android:layout_marginBottom="@dimen/dimen10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/error" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/server_error_msg"
                                android:textSize="@dimen/dimen30sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
