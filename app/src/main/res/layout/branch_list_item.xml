<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="horizontal"
    android:gravity="center"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen10dp"
        android:layout_marginRight="@dimen/dimen10dp"
        app:cardCornerRadius="@dimen/dimen10dp"
        android:layout_marginBottom="@dimen/dimen10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
         android:focusable="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen15dp"
        app:cardElevation="@dimen/dimen5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen50dp"
                android:layout_height="@dimen/dimen50dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:src="@drawable/location"
                android:layout_gravity="center"></ImageView>
            <TextView
                android:id="@+id/tvBranchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen15sp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dimen10dp"
                android:paddingRight="@dimen/dimen10dp"
                android:paddingTop="@dimen/dimen10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/branch_list_title"/>
            <TextView
                android:id="@+id/tvAuditId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen10sp"
                android:paddingLeft="@dimen/dimen10dp"
                android:paddingRight="@dimen/dimen10dp"
                android:paddingBottom="@dimen/dimen10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
               />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>